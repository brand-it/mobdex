<% if object.errors.any? %> 
  <%= content_tag(:div, :id => "error_explantion") do %>
    <%= content_tag(:h2, pluralize(object.errors.count, "error")) %>
    <%= content_tag(:ul) do %> 
      <% object.errors.full_messages.each do |msg| %>
				<%= content_tag(:li, msg) %>
			<% end %>
		<% end %>
	<% end %>
<% end %>