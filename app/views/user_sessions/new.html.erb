<div id="information">
	<div class="login">
		<%= form_for @user_session, :url => user_sessions_path do |f| %>
			<div class="text_field">
			  <%= f.label(:email, "Email", :hide_errors => true) %><br />
			  <%= f.text_field :email %>
			</div>
			<div class="text_field">
			  <%= f.label(:password, "password", :hide_errors => true) %><br />
			  <%= f.password_field :password %>
			</div>
			<div class="checkbox">
		  		<%= f.check_box :remember_me %><%= f.label :remember_me %>
			</div>
			<div class="submit">
				<%= f.submit "Login" %>
			</div>
		<% end %>
	</div>
	<div class="request_activation">
		<%= link_to "Request Activation", request_activation_users_path %>
	</div>
	
</div>