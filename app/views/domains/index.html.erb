<%= render "search" %>
<section class="row content">
	<% for domain in @domains %>
	    	<div class="span4 offset4 well">
	    		<%= image_tag domain.favicon_url %>
	    		<h2><%= link_to truncate(domain.title, :length => 50, :separator => ' '), domain_path(domain) %></h2>
	    		<p>
					<%= truncate(domain.description, :length => 150, :separator => ' ') %>
	    		</p>
				<% if domain.tags.length > 0 %>
	    		<span class="tags"><i class="icon-tag"></i> <%= domain.tags.limit(5).map{|tag| truncate(tag.name, :length => 12, :separator => ' ')}.join(", ") %></span>
				<% end %>
	    	</div>
	<% end %>
</section>