/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree . 
*/

* {
	margin: 0px;
	padding: 0px;
	font-family: Verdana;
	font-size: 11px;
}
// Main Navigation for the site
	#top_navi {
		background-image: url(<%= asset_path "repeat_background.png" %>);
		color: #FFF;
		padding: 10px;
		height: 20px;
	}

	#top_navi a {
		padding-right: 5px;
		padding-left: 5px;
		color: #EDEDED;
		text-decoration: none;
	}

	#top_navi a:hover {
		color: #FFF;
		text-decoration: underline;
	}
	
	#top_navi .navi_left {
		float: left;
	}
	
	#top_navi .navi_right {
		float: right;
		height: 20px;
	}
// End Main Navigation

// Search Stuff

#search {
	padding: 10px;
}

// End Search Stuff


// Sub Navigation


#subNavi {
	padding: 10px;
	background-color: gray;
}

#subNavi a {
	color: #EDEDED;
	padding-right: 5px;
	padding-left: 5px;
}

#subNavi a:hover {
	color: #FFF;
	text-decoration: none;
}

// End Sub navigation
.content {
	padding: 0px;
}

#information {
	padding: 20px;
}

#error_explantion h2{
	color: red;
	padding: 10px;
}

#error_explantion ul {
	list-style-type: none;
	padding: 10px;
}

.field_with_errors {
	color: red;
	display: inline;
}

/*---------------- Flash ------------------------*/
	.notice-message {
		color: #FF9200;
	}
	.error-message{
		color: red;
	}
	.success-message {
		color: green;
	}

/*---------------- End Flash --------------------*/