* {
	margin: 0px;
	padding: 0px;
}
body{
	overflow: hidden-x;
	background: url(<%= asset_path "bg.png" %>) repeat;
}

.btn{
	background-color: #f097b1;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#f097b1), to(#e76387));
	background-image: -webkit-linear-gradient(top, #f097b1, #e76387);
	background-image: -moz-linear-gradient(top, #f097b1, #e76387);
	background-image: -o-linear-gradient(top, #f097b1, #e76387);
	background-image: -ms-linear-gradient(top, #f097b1, #e76387);
	background-image: linear-gradient(top, #f097b1, #e76387);
	filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,StartColorStr='#f097b1', EndColorStr='#e76387');
	border: 1px solid #dc2f59;
	-moz-box-shadow: 0 1px 0 #dc2f59;
	-webkit-box-shadow: 0 1px 0 #dc2f59;
	box-shadow: 0 1px 0 #dc2f59;
	margin-left: 5px;
}

.btn:hover{
	background-color: #6c6c6c;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#6c6c6c), to(#474747));
	background-image: -webkit-linear-gradient(top, #6c6c6c, #474747);
	background-image: -moz-linear-gradient(top, #6c6c6c, #474747);
	background-image: -o-linear-gradient(top, #6c6c6c, #474747);
	background-image: -ms-linear-gradient(top, #6c6c6c, #474747);
	background-image: linear-gradient(top, #6c6c6c, #474747);
	filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,StartColorStr='#6c6c6c', EndColorStr='#474747');
	background-position: 0;
	border-color: #222222;
	border-width: 1px;
	-moz-box-shadow: 0 1px 0 #222222;
	-webkit-box-shadow: 0 1px 0 #222222;
	box-shadow: 0 1px 0 #222222;
}
.shape{
	background-color: #ffffff;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#f4f4f4));
	background-image: -webkit-linear-gradient(top, #ffffff, #f4f4f4);
	background-image: -moz-linear-gradient(top, #ffffff, #f4f4f4);
	background-image: -o-linear-gradient(top, #ffffff, #f4f4f4);
	background-image: -ms-linear-gradient(top, #ffffff, #f4f4f4);
	background-image: linear-gradient(top, #ffffff, #f4f4f4);
	filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,StartColorStr='#ffffff', EndColorStr='#f4f4f4');
	padding: 10px;
	border-radius: 4px;
	-moz-box-shadow: 0 0 4px #d4d4d4, 0 2px 0 #d4d4d4;
	-webkit-box-shadow: 0 0 4px #d4d4d4, 0 2px 0 #d4d4d4;
	box-shadow: 0 0 4px #d4d4d4, 0 2px 0 #d4d4d4;
	border-left: 1px solid #d5d5d5;
	border-right: 1px solid #d5d5d5;
	
}
.input-mobdex{
	width: 75%;
}
.results{
	width: 29%;
	z-index: -10;
	margin-top: -30px;
	position: relative;
	padding-bottom: 0;
	-moz-box-shadow: 0 2px 0 #c0c0c0, 0 3px 5px #adb7bb;
	-webkit-box-shadow: 0 2px 0 #c0c0c0, 0 3px 5px #adb7bb;
	box-shadow: 0 2px 0 #c0c0c0, 0 3px 5px #adb7bb;
	border-bottom: 1px solid #e8e8e8;
	left: 12.5px;
}
.results p{
	padding-top: 10px;
	font-family: Georgia, "Times New Roman", Times, serif;
	font-style: italic;
}
.search{
	z-index: 0;
	position: relative;
}
.logo{
	color: rgba(0, 0, 0, 0.57);
	text-align: center;
	text-shadow: 1px 3px 0 #afd3dd;
	padding: 10px 0;
	font-size: 42px;
}
.content{
	margin-bottom: 50px;
}
.content .well{
	
	background-color: rgba(255, 255, 255, 0.48);
	margin-top: 10px;
	margin-bottom: 5px;
}
.content a{
	color: #ec819f;
}
.content img{
	float: left;
	padding: 5px;
	height: 75px;
	width: 76px;
}
.content p{
	font: 8pt Georgia, "Times New Roman", Times, serif;
	margin-bottom: 0;
}
.content span{
	font: 9pt Georgia, "Times New Roman", Times, serif;
	margin-top: -10px;
}
h2{
	font: 13pt Georgia, "Times New Roman", Times, serif;
}
iframe 
{
 display: block; 
 width: 100%; 
 height:900px;
 border: none; 
 overflow-y: auto; 
 overflow-x: hidden;
}
.nopad{
	padding-top: 0;
}
  @media (max-width: 480px) { 
  .navbar-fixed-bottom{
  	top: 92%;
  }
  	.input-mobdex{
  		width: 70%;
  	}
  	.results{
  		  	left: 0;
  		  	margin-left:6px !important;
  		  	width:88% !important;
  		  	
  		  }
  		 .results p{
  		     margin-top:15px;
  		  }  
  
  }

  @media (max-width: 768px) { 
  	.results{
  		  	left: 0;
  		  	margin-left:10px;
  		  	width:92%;
  		  	
  		  }
  	.results p{
  	    padding-top:15px;
  	 }  
  
  }

 


