// setup
* {
	margin: 0px;
	padding: 0px;
	font-family: Verdana;
	font-size: 11px;


}

html body {
	background-repeat:repeat-x;
	background-image: url(<%= asset_path "bg.png" %>);
	height: 100%;
	background-color: #ffffff;
}


#content {
	width: 600px;
	margin: auto;
}


// Domains Search 
#search {
	background-image: url(<%= asset_path "inner_background.jpg" %>);
	border-style: none;
	padding: 9px;
	float:left;
	margin: 0px;
	border-width: 0px;
	outline: none;
	width: 200px;
}

#border {
	margin: auto;
	overflow:auto;
	background-image: url(<%= asset_path "search_box_background.jpg" %> );
	width: 300px;
	height: 52px;
}

#border form {
	display: inline;
}

#capLeft {
	float: left;
}

#capRight {
	float: left;
}
#searchInputWraper {
	margin: 10px;
}

#searchButton {
	background:url(<%= "search_btn.jpg" %>) no-repeat;
    cursor:pointer;
    width: 30px;
    height: 31px;
    border: none;
}

// End Domains Search

// Header

#header {
	color: white;
	font-style: bold;
	text-align:center;
}

#header h1 {

	font-size: 20px;
}

// End Header


// favicon

.favicon {
	width: 34px;
	height: 34px;
}

// favicon end

// Error on create a peace of rails
#error_explantion h2{
	color: red;
	padding: 10px;
}

#error_explantion ul {
	list-style-type: none;
	padding: 10px;
}

.field_with_errors {
	color: red;
	display: inline;
}

// end error on create a peace of rails



// Domain index


.domain {
	background-color: white;
	padding: 30px;
	margin: 5px;
	overflow: auto;
}

.domain #favicon {
	padding: 20px;
	float: left;

}

.domain #domainInformation {
	float: left;
	width: 430px;
}


.domain #title {
	font-size: 20px;
}

.domain #favicon img {
	height: 54px;
	width: 54px;
}

.domain #description {
	font-size: 12px;
}

// end domain index

